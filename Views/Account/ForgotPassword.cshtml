@model Alcantara.ViewModels.ForgotPasswordViewModel
@{ 
    Layout = null;
}
        <form class="d-none" asp-action="ForgotPassword" asp-controller="Account" method="post" id="fogotForm">
            <div class="row justify-content-center">
                <div asp-validation-summary="ModelOnly" class="col-12 col-md-8 text-danger text-center"></div>
                <div class="col-12 col-md-8 text-danger text-center" id="fogotFormVal"></div>
                <div class="form-group col-12 col-md-8 text-left">
                    <label asp-for="ForgotPasswordEmail" class="control-label"></label>
                    <input asp-for="ForgotPasswordEmail" class="form-control InputStyle" />
                    <span asp-validation-for="ForgotPasswordEmail" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-8">
                    <input type="submit" value="@Localizer["ResetPasswordBtn"]" class="btn btn-primary float-left" />
                    <div class="spinner-border d-none" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                    <a class="LinkStyle float-right" href="javascript:void(0);" onclick="$('#fogotForm').addClass('d-none'); $('#loginForm').removeClass('d-none');">@Localizer["BackToLogin"]</a>
                </div>
            </div>
        </form>
@model RegistrationViewModel
@{ 
    Layout = null;
}

        <form asp-action="Registration" asp-controller="Account" asp-antiforgery="true" method="post" id="regForm" onsubmit="">
            <div class="row justify-content-center text-left">
                <div asp-validation-summary="ModelOnly" class="text-danger col-12 col-md-8"></div>
                <div class="text-danger col-12 col-md-8" id="RegFormVal"></div>
                <div class="w-100"></div>
                <div class="form-group col-12 col-md-4">
                    <label asp-for="FName" class="control-label"></label>
                    <input asp-for="FName" class="form-control InputStyle" />
                    <span asp-validation-for="FName" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-4">
                    <label asp-for="LName" class="control-label"></label>
                    <input asp-for="LName" class="form-control InputStyle" />
                    <span asp-validation-for="LName" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-8">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control InputStyle" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-8">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control InputStyle" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-8">
                    <label asp-for="ComparePassword" class="control-label"></label>
                    <input asp-for="ComparePassword" class="form-control InputStyle" />
                    <span asp-validation-for="ComparePassword" class="text-danger"></span>
                </div>
                <div class="form-group col-12 col-md-8 my-4">
                    <label class="form-check-label">
                    <input type="checkbox" class="form-check-inline ml-1" onclick="$('#regFormSubmit').prop('disabled',!($('#regFormSubmit').prop('disabled')))" />
                    @Localizer["I agree"] <a asp-action="Policy" asp-controller="Home">@Localizer["Policy"]</a>
                    </label>
                </div>
                <div class="form-group col-12 col-md-8 disabled">
                    <input type="submit" value="@Localizer["Create new account"]" class="btn btn-primary btn-block" disabled id="regFormSubmit"/>
                </div>
            </div>
</form>

@{
    ViewData["Title"] = "Policy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12 mt-4 text-center" style="color:#132E6D;">
            <h2>@Localizer["Header"]</h2>
        </div>
        <div class="col-12 mt-4" style="color:#3658A7;">
            <ul>
                @for (int i = 0; i < 10; i++)
                {
                    <li class="mt-2">@Localizer[$"Section{i}"]</li>
                }
            </ul>
        </div>
    </div>
</div>
